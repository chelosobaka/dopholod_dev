<div class="product-container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <div class="model-title">
        <h1>Наши работы</h1>
      </div>

			<% @work_object.each do |object| %>
				<div class = "work_object">
					<div class="model-title work_object-title">
						<h3><%= object.title %></h3>
					</div>

					<div class="bd-example">
						<div id="myCarousel<%= object.id %>" class="carousel slide carousel-size" data-ride="carousel" data-interval="false">

							<ol class="carousel-indicators">
								<% object.work_photos.count.times do |index| %>
					      	<% if index == 0 %>
										<li data-target="#myCarousel<%= object.id %>" data-slide-to="<%=index%>" class="active"></li>
									<% else %>
									  <li data-target="#myCarousel<%= object.id %>" data-slide-to="<%=index%>"></li>
									<% end %>
					      <% end %>
					    </ol>

							<div class="carousel-inner ">
						  	<% object.work_photos.each_with_index do |photo, index| %>
							  	<% if index == 0 %>
								    <div class="item active d-flex h-100 align-items-center justify-content-center">
								    	<%= photo_for_slider(photo, index) %>
								    </div>
								  <% else %>
								    <div class="item">
								      <%= photo_for_slider(photo, index) %>
								    </div>
								  <% end %>
								<% end %>
							</div>

							<a class="left carousel-control" href="#myCarousel<%= object.id %>" data-slide="prev">
								<span class="glyphicon glyphicon-chevron-left"></span>
								<span class="sr-only">Previous</span>
				    	</a>

							<a class="right carousel-control" href="#myCarousel<%= object.id %>" data-slide="next">
								<span class="glyphicon glyphicon-chevron-right"></span>
								<span class="sr-only">Next</span>
							</a>

						</div>
					</div>
				</div>
			<% end %>

		</div>
	</div>
</div>

